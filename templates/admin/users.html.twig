{% extends "base-js.html.twig" %}

{% block title %}
	Capsule - Espace d'administration
{% endblock %}

{% block body %}
	<h1 style="color: white">Liste des utilisateurs</h1>
	<div style="color: white">
		<table style="width: 50%; margin:auto">
			{% for user in users %}
				<tr>
					<td style="width: 30%">
						<a style="color:white; text-decoration: none" href="/admin/user/{{user.id}}">{{user.firstName}}</a>
					</td>
					<td style="width: 30%">
						<a style="color:white; text-decoration: none" href="/admin/user/{{user.id}}">{{user.name}}</a>
					</td>
					<td style="width: 20%">
						<a style="color:white; text-decoration: none" href="/admin/user/{{user.id}}">{{user.role}}</a>
					</td>
					<td>{{ user.email }}</td>
					<td style="width: 20%">
						<a style="color:white; text-decoration: none" href="/admin/user/{{user.id}}">{{user.status == 'active' ? 'Actif' }}
							<span style="color: red">{{user.status == 'suspended' ? 'Compte suspendu' }}</span>
							<span style="color: yellow">{{user.status == 'pending' ? 'Compte Ã  approuver' }}</span>
						</a>
					</td>
				</tr>
			{% endfor %}
		</table>
	</div>
{% endblock %}
