{% extends "base-js.html.twig" %}

{% block title %}Capsule{% endblock %}

{% block body %}
	{# Image accueil #}
	<div class="container-fluid text-center" style="padding: 0; background-image: url('images/landing_first.png'); background-size: cover;">
		<div class="row align-items-center justify-content-center" style="margin-top: -70px; height: 50vw; min-height: 250px ;margin-left: 0px; margin-right: 0px;">
			<h1 class="landing">L'appli qui parle aux jeunes<br>et à leurs parents</h1>
		</div>
	</div>

	{# Bool un appel #}
	<div class="row" style="padding: 75px; margin: 0">
		<div class="col col-8" style="padding: 5%">
			<h2 class="landing">Book un appel avec un professionnel</h1>
			<p>Texte sur Capsule et ses atouts</p>
		</div>
		<div class="col col-4">
			<img src="images/landing_book.png" alt="Image book un appel" style="width:30vw">
		</div>
	</div>

	{# C'est quoi Capsule ? #}
	<div class="row" style="padding-top: 75px; margin: 0">
		<div class="col col-8">
			<h2 class="landing">C'est quoi Capsule ?</h1>
		</div>
		<div class="col col-4"></div>
	</div>
	<div class="row row-cols-1 row-cols-md-3 mb-3" style="padding: 5px; margin: 0">
		<div class="col">
			<img src="images/reseau_actif.svg" alt="" height="240px" width="auto"><br>
			<h4 class="landing">Un réseau actif</h4>
			<p>Texte réseau</p>
		</div>
		<div class="col">
			<img src="images/messagerie.svg" alt="" style="transform :rotate(270deg)" height="240px" width="auto"><br>
			<h4 class="landing">Messagerie</h4>
			<p>Texte messagerie</p>
		</div>
		<div class="col">
			<img src="images/teleconsultation.svg" alt="" height="240px" width="auto"><br>
			<h4 class="landing">Téléconsultation</h4>
			<p>Texte téléconsultation</p>
		</div>
	</div>

	{# Citation #}
	<div class="row" style="background: rgba(48,180,167,0.5); padding: 75px; margin: 0">
		<p>
			<h1>On a tous le droit de choisir l'adulte que l'on veut devenir !
				<br>C'est notre mission de t'informer et te soutenir sur ton chemin.</h1>
		</p>
	</div>

	{# Accès espaces personnel #}
	<div class="row" style="padding: 75px 75px 75px 0px; margin: 0">
		<div class="col col-8">
			<h2 class="landing">Ton espace personnel</h2>
			<table style="width: 80%; margin: auto; font-size: 2vw; text-align: left">
				<tr style="border-bottom: 3px solid rgba(48,180,167,0.5)">
					<td style="width: 60%;  padding: 25px 5px">Je suis ado</td>
					<td style="text-align: right">
						<a href="/profil_jeune"><img src="/images/add.png" alt="+" height="32vw"></a>
					</td>
				</tr>
				<tr style="border-bottom: 3px solid rgba(48,180,167,0.5)">
					<td style="padding: 25px 5px">Je suis parent</td>
					<td style="text-align: right">
						<a href="/profil_parent"><img src="/images/add.png" alt="+" height="32vw"></a>
					</td>
				</tr>
				<tr>
					<td style="padding: 25px 5px">Je suis praticien</td>
					<td style="text-align: right">
						<a href="/profil_pro"><img src="/images/add.png" alt="+" height="32vw"></a>
					</td>
				</tr>
			</table>
		</div>
		<div class="col col-4"><img src="/images/landing_espace_perso.jpg" style="width:30vw"></div>
	</div>

	{# Liste des praticiens #}
	<div class="row" style="background: rgba(48,180,167,0.5); padding: 75px 75px 0px 75px; margin: 0">
		<h1>Nos praticiens</h1>

		<div class="row row-cols-1 row-cols-md-3 mb-3" style="padding: 5px; margin-top: 150px">
		</div>
	</div>

	{# Ressources #}
	<div class="row" style="padding: 75px; margin: 0">
		<div>
			<a href="/ressources"><img src="/images/landing_ressources.png" alt="landing_ressources.png" style="margin-bottom: 25px; max-width:400px; width:100vw"></a><br>
		</div>

		<h5 style="margin-top: 15px">VIDEOS</h5>
		<div class="row row-cols-1 row-cols-md-3 mb-3">
			<div class="col">
				<iframe style="width:75vw; max-width:400px; height:75vw; max-height:400px" border-radius="20%" src="https://www.youtube.com/embed/k17Ul2eTzus" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
			</div>
			<div class="col">
				<iframe style="width:75vw; max-width:400px; height:75vw; max-height:400px" src="https://www.youtube.com/embed/eqCyYR_bGDE?controls=0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
			</div>
			<div class="col">
				<iframe style="width:75vw; max-width:400px; height:75vw; max-height:400px" src="https://www.youtube.com/embed/GPPK-qqtmCU?controls=0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
			</div>
		</div>
		<form action="/ressources" method="post">
			<input type="hidden" name="type" value="videos">
			<input type="submit" value="Plus de vidéos =>">
		</form>

		<h5 style="margin-top: 25px">PODCASTS</h5>
		<div class="row row-cols-1 row-cols-md-3 mb-3">
			<div class="col">
				<img src="/images/landing_podcast.png" style="border-radius: 50%; max-height:300px; max-width:300px" alt="landing_podcast.png">
				<br>Podcast 1
			</div>
			<div class="col">
				<img src="/images/landing_podcast.png" style="border-radius: 50%; max-height:300px; max-width:300px" alt="landing_podcast.png">
				<br>Podcast 2
			</div>
			<div class="col">
				<img src="/images/landing_podcast.png" style="border-radius: 50%; max-height:300px; max-width:300px" alt="landing_podcast.png">
				<br>Podcast 3
			</div>
		</div>
		<form action="/ressources" method="post">
			<input type="hidden" name="type" value="podcasts">
			<input type="submit" value="Plus de podcasts =>">
		</form>

		<h5 style="margin-top: 25px">AUDIOBOOKS</h5>
		<div class="row row-cols-1 row-cols-md-3 mb-3">
			<div class="col">
				<img src="/images/landing_audiobooks.png" style="border-radius: 50%; max-height:300px; max-width:300px" alt="landing_podcast.png">
				<br>Livre audio 1
			</div>
			<div class="col">
				<img src="/images/landing_audiobooks.png" style="border-radius: 50%; max-height:300px; max-width:300px" alt="landing_podcast.png">
				<br>Livre audio 2
			</div>
			<div class="col">
				<img src="/images/landing_audiobooks.png" style="border-radius: 50%; max-height:300px; max-width:300px" alt="landing_podcast.png">
				<br>Livre audio 3
			</div>
		</div>
		<form action="/ressources" method="post">
			<input type="hidden" name="type" value="audiobooks">
			<input type="submit" value="Plus d'audiobooks =>">
		</form>
	</div>
{% endblock %}
